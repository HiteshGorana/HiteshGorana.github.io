---
import '../styles/global.css';
import resume from '../data/resume.json';

const { basics, education, work, skills, awards, projects } = resume;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{basics.name} - {basics.label}</title>
    <meta name="description" content={`${basics.label} based in ${basics.location.city}, ${basics.location.country}`}>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@400;500;700;800&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <header>
        <div class="container nav-container">
            <a href="/" class="logo">{basics.name}</a>
            <nav class="nav-links">
                <a href="#about">About</a>
                <a href="#experience">Experience</a>
                <a href="#projects">Projects</a>
                <a href="#skills">Skills</a>
                <a href="#contact">Contact</a>
                <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
                    <i class="fas fa-moon"></i>
                </button>
            </nav>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        <section id="about" class="hero">
            <div class="container">
                <h1>Hello, I'm <br>{basics.name}</h1>
                <p>
                    {basics.label} with <strong>{basics.totalExperience}</strong> of experience.<br>
                    Based in {basics.location.city}, {basics.location.country}.<br>
                    Specializing in Machine Learning, AI, and Full Stack Development.
                </p>
                <div class="social-links">
                    <a href={`mailto:${basics.email}`} class="social-btn">
                        <i class="fas fa-envelope"></i> Email
                    </a>
                    {basics.profiles.map(profile => (
                    <a href={profile.url} target="_blank" class="social-btn">
                        <i class={`fab fa-${profile.network.toLowerCase()}`}></i> {profile.network}
                    </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- Experience Section -->
        <section id="experience">
            <div class="container">
                <h2>Experience</h2>
                <div class="timeline">
                    {work.map(job => (
                    <div class="timeline-item">
                        <div class="job-header">
                            <span class="job-title">{job.position}</span>
                            <span class="job-company">@ {job.company}</span>
                            <span class="job-meta">{job.startDate} — {job.endDate} | {job.location}</span>
                        </div>
                        <div class="job-summary">
                            <ul set:html={job.summary.split('\n').map(line => line.trim()).filter(line => line).map(line => `<li>${line.replace(/^- /, '').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}</li>`).join('')}></ul>
                        </div>
                    </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section id="projects">
            <div class="container">
                <h2>Selected Projects</h2>
                <div class="project-grid">
                    {projects.map(project => (
                    <div class="project-card">
                        <h3 class="project-title">
                            <a href={project.url} target="_blank">{project.name} <i class="fas fa-external-link-alt" style="font-size: 0.8em;"></i></a>
                        </h3>
                        <p class="project-tech">{project.tech}</p>
                        <p>{project.summary}</p>
                    </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section id="skills">
            <div class="container">
                <h2>Technical Skills</h2>
                <div class="skills-grid">
                    {skills.map(category => (
                    <div class="skill-category">
                        <h3>{category.name}</h3>
                        <div class="skill-tags">
                            {category.keywords.map(keyword => (
                            <span class="skill-tag">{keyword}</span>
                            ))}
                        </div>
                    </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Education & Awards Section -->
        <section id="awards">
            <div class="container">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem;">
                    <div>
                        <h2>Education</h2>
                        {education.map(edu => (
                        <div style="margin-bottom: 2rem;">
                            <h3 style="margin-bottom: 0.5rem; font-size: 1.2rem;">{edu.institution}</h3>
                            <p style="color: var(--accent-color);">{edu.area} ({edu.studyType})</p>
                            <p style="font-size: 0.9rem; opacity: 0.8;">{edu.startDate} — {edu.endDate} · {edu.location}</p>
                            <ul style="margin-top: 1rem; padding-left: 1.2rem; font-size: 0.95rem;">
                                {edu.achievements.map(achievement => (
                                <li set:html={achievement.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}></li>
                                ))}
                            </ul>
                        </div>
                        ))}
                    </div>
                    
                    <div>
                        <h2>Awards & Honors</h2>
                        {awards.map(award => (
                        <div class="award-item">
                            <h4 style="margin-bottom: 0.5rem; font-size: 1rem;">{award.title}</h4>
                            <p style="font-size: 0.9rem;">{award.summary}</p>
                        </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

    </main>

    <footer id="contact">
        <div class="container">
            <p>&copy; {new Date().getFullYear()} {basics.name}. Built with Astro.</p>
        </div>
    </footer>

    <script>
        import "../scripts/main.js";
    </script>
</body>
</html>
